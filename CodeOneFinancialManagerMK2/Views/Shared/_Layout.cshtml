<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/knockout")
    @Styles.Render("~/Content/starter-template.css")

    <title>Starter Template for Bootstrap</title>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <header class="navigation">
        <div class="navigation-wrapper">
            <a href="javascript:void(0)" class="logo">
                <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="">
            </a>
            <div class="nav">
                <ul id="navigation-menu">
                    <li class="nav-link">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-link">@Html.ActionLink("Analysis", "Analysis", "Home")</li>
                    <li class="nav-link">@Html.ActionLink("Actions", "IFTT", "Home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <div class="alerts-container">
            <div class="alerts-header">
                <h4>Alerts</h4>
            </div>
            <div class="alert-group">
                <div class="alert">
                    <div class="alert-indicator alert-good"></div>
                    <div class="alert-text">
                        <div class="date">9/13</div>
                        <div class="info">
                            ADP*FirstNational deposited $52.14.
                        </div>
                    </div>
                </div>
                <div class="alert">
                    <div class="alert-indicator alert-warning"></div>
                    <div class="alert-text">
                        <div class="date">9/9</div>
                        <div class="info">
                            John spent $52.14 at The Watering Hole.
                        </div>
                    </div>
                </div> <!-- alert -->
            </div> <!-- alert group -->
        </div>

        <div class="body-container">
            <div class="row">
                <div class="body-header">
                    Account Balance
                </div>
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    @Scripts.Render("~/Scripts/navigation.js")
    @RenderSection("scripts", required: false)
</body>
</html>
