<body>
    <header class="navigation">
        <div class="navigation-wrapper" style="max-width: 85%">
            <a href="javascript:void(0)" class="logo">
                <img src="~/images/logo.png" alt="">
            </a>
            <div class="nav">
                <ul id="navigation-menu">
                    <li class="nav-link"><span>@Html.ActionLink("Dashboard", "Index", "Home")</span></li>
                    <li class="nav-link">@Html.ActionLink("Action Plans", "IFTT", "Home")</li>
                    <li class="nav-link">@Html.ActionLink("Goals", "Goals", "Home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </header>

    <div class="wrapper" style="max-width: 85%">
        <div id="alertWrapper" class="alerts-container" style="background-color: #EEE;">
            <div class="alerts-header">
                <h4>Recent Alerts</h4>
            </div>
            <div class="alert-group" data-bind="foreach: alerts">

                <div class="alert">
                    <div class="alert-indicator alert-good"></div>
                    <div class="alert-text">
                        <div class="date" style="font-weight: bold;" data-bind="text: Date"></div>
                        <div class="info" data-bind="text: Description"></div>
                    </div>
                </div>

            </div>



