@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/highcharts.js" type="text/javascript"></script>
    <script src="~/Scripts/Analysis/BarChart.js" type="text/javascript"></script>
    <script src="~/Scripts/Analysis/PieChart.js" type="text/javascript"></script>
    <script src="~/Scripts/ammap.js" type="text/javascript"></script>
    <script src="~/Scripts/usaLow.js" type="text/javascript"></script>
    <script src="~/Scripts/Analysis/MapChart.js" type="text/javascript"></script>
    <script src="~/Scripts/Analysis/LineChart.js" type="text/javascript"></script>
    @Scripts.Render("~/Scripts/Analysis/viewModel.js")
    @Scripts.Render("~/Scripts/jquery.selectric.js")

    <script type="text/javascript">
        var model = @Html.Raw(Json.Encode(Model));
        $(function () {
            $('select').selectric({
                inheritOriginalWidth: true

            });
        });
    </script>
}


@section styles {
    @Styles.Render("~/Content/selectric.css")
}

<style>
    td {
        padding: 10px;
    }

    .body-container {
        height: auto;
    }

</style>

<table>
    <tr>
        <td style="border-right:1px solid #ddd;">
            <div>
                <div id="balanceContainer" style="min-width: 300px; height: 310px; margin: 0 auto; cursor: pointer;">
                    <div style="margin-top: 10px;">
                        <h4 style="display: inline-block; margin-bottom: 0.5em; vertical-align: bottom;">Hi Jake. Your </h4>
                        <span class="input-wrapper" style="display: inline-block;">
                            <select  class="dropdown-select" data-bind="options: availableAccounts, optionsText: 'accountName', value: selectedAccount"></select>
                        </span>
                        </div>
                    <h4>account balance is <span data-bind="visible: selectedAccount().id === 1"style="color:#4AAA42;">$3,441.07</span><span data-bind="visible: selectedAccount().id !== 1" style="color:#4AAA42;">$901.11</span></h4>
                    <hr />
                    <div id="lineContainer" style="min-width: 300px; height: 200px; margin: 0 auto; cursor: pointer;">

                    </div>
                </div>
            </div>
        </td>
        <td>
            <div id="barChart">
                <div id="container" style="min-width: 300px; height: 310px; margin: 0 auto; cursor: pointer;"></div>
            </div>
        </td>
    </tr>
    <tr>
        <td style="border-right:1px solid #ddd; border-bottom: none;">
            <div id="pieChart">
                <div id="pieContainer" style="min-width: 300px; height: 310px; margin: 0 auto; cursor: pointer;"></div>
            </div>
        </td>
        <td style="border-bottom: none;">
            <div id="mapChart">
                <div id="chartdiv" style="min-width: 300px; height: 310px; margin: 0 auto; cursor: pointer;"></div>
            </div>
        </td>
    </tr>
</table>


